<h1>Login to a World of Superheros</h1>


<%= form_tag(login_path) do %>
  <div>
    <%= label_tag(:username) %>
    <%= text_field_tag(:username, params[:username], autofocus: true) %>
  </div>
  <div>
    <%= label_tag(:password) %>
    <%= password_field_tag(:password) %>
  </div>
  <div>
    <%= submit_tag "Login" %>
  </div>
<% end %>

<%= link_to "Don't have an account? Signup here.", signup_path %>
